{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "exclude": [ "**/bin/**", "**/obj/**" ], 
          "cwd": "../src"
        }
      ],
      "dest": "obj/docfx/api/dotnet"
    },
    {
      "src": [
        {
          "files": ["**/*.js"],
          "cwd": "../src"
        }
      ],
      "dest": "obj/docfx/api/js" 
    }
  ],
  "build": {
    "content":
      [
        {
          "files": ["**/*.yml"],
          "cwd": "obj/docfx"
        },
        {
          "files": ["tutorial/**/*.md", "spec/**/*.md"]
        },
        {
          "files": ["toc.yml"]
        }
      ],
    "resource": [
        {
          "files": ["images/**"]
        }
    ],
    "overwrite": "apispec/*.md",
    "externalReference": [
      "external/*.yml.zip"
    ],
    "globalMetadata" : {
      "_appTitle": "Doc-as-code documentation"
    },
    "dest": "_site",
    "template": ["default", "override"],
    "theme": "happy"
  }
}